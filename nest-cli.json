{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "./dist/src",
        "watchAssets": true
      },
      {
        "include": "../public/**/*",
        "outDir": "./dist/public",
        "watchAssets": true
      }
    ]
  }
}
